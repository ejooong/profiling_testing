    // üìç ADD DPRT MARKERS WITH CLUSTERING
    function addDprtMarkers(data) {
        if (!data.dprts || !Array.isArray(data.dprts)) return;

        // Create marker cluster group
        markerCluster = L.markerClusterGroup({
            maxClusterRadius: 40,
            iconCreateFunction: function(cluster) {
                const count = cluster.getChildCount();
                let color = '#22c55e';

                if (count > 20) {
                    color = '#dc2626';
                } else if (count > 10) {
                    color = '#eab308';
                }

                return L.divIcon({
                    html: `
                        <div style="background-color: ${color}; width: 40px; height: 40px; border-radius: 50%; 
                             display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                            ${count}
                        </div>
                    `,
                    className: 'marker-cluster',
                    iconSize: L.point(40, 40)
                });
            }
        });

        // Add DPRT markers to cluster
        data.dprts.forEach(dprt => {
            const lat = dprt.latitude || -7.150975;
            const lng = dprt.longitude || 111.881860;
            const hasCoords = dprt.latitude && dprt.longitude;

            const icon = L.divIcon({
                html: `
                    <div class="custom-dprt-icon" style="background-color: ${hasCoords ? '#22c55e' : '#9ca3af'};">
                        <i class="fas fa-map-pin" style="font-size: 10px;"></i>
                    </div>
                `,
                className: 'dprt-marker',
                iconSize: [24, 24],
                iconAnchor: [12, 24]
            });

            const marker = L.marker([lat, lng], {
                    icon
                })
                .bindPopup(`
                    <div style="font-weight: bold; color: #22c55e; margin-bottom: 5px;">
                        ${dprt.desa_name}
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        Kecamatan: ${dprt.dpc_name || ''}
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        Ketua: ${dprt.ketua || 'Belum ditentukan'}
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        Kader: ${dprt.total_kader || 0} orang
                    </div>
                    <div style="font-size: 12px; margin-bottom: 5px;">
                        Status: ${dprt.is_active ? 'Aktif' : 'Non-Aktif'}
                    </div>
                    ${!hasCoords ? 
                        '<div style="font-size: 11px; color: #eab308; font-style: italic;">*Koordinat belum diisi</div>' 
                        : ''}
                    <div style="margin-top: 8px;">
                        <a href="/admin/dprt/${dprt.id}" 
                           style="display: inline-block; background-color: #22c55e; color: white; 
                                  padding: 4px 8px; border-radius: 4px; font-size: 12px; text-decoration: none;">
                            <i class="fas fa-external-link-alt" style="margin-right: 4px;"></i>Detail
                        </a>
                    </div>
                `);

            dprtMarkers.push(marker);
            markerCluster.addLayer(marker);
        });

        // Add cluster to map
        map.addLayer(markerCluster);
        console.log(`‚úÖ ${data.dprts.length} DPRT markers added (clustered)`);
    }

