    // üé® CHANGE MAP TYPE
    function changeMapType(type) {
        if (!map || !currentTileLayer) return;

        // Remove existing tile layer
        map.removeLayer(currentTileLayer);

        let url, attribution;

        switch (type) {
            case 'satellite':
                url = 'https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}';
                attribution = 'Tiles ¬© Esri';
                break;
            case 'topographic':
                url = 'https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png';
                attribution = 'Map data ¬© OpenStreetMap contributors';
                break;
            case 'dark':
                url = 'https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png';
                attribution = '¬© OpenStreetMap, ¬© CARTO';
                break;
            default: // street
                url = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png';
                attribution = '¬© OpenStreetMap contributors';
        }

        currentTileLayer = L.tileLayer(url, {
            attribution: attribution,
            maxZoom: 19
        }).addTo(map);

        console.log(`‚úÖ Changed map type to: ${type}`);
    }

    // üëÅÔ∏è TOGGLE DATA LAYERS
    function toggleDataLayers(layerType) {
        if (!map) return;

        // DPC markers
        dpcMarkers.forEach(marker => {
            if (layerType === 'dprt' || layerType === 'kader') {
                if (map.hasLayer(marker)) map.removeLayer(marker);
            } else if (!map.hasLayer(marker)) {
                map.addLayer(marker);
            }
        });

        // DPRT cluster
        if (markerCluster) {
            if (layerType === 'dpc' || layerType === 'all') {
                if (!map.hasLayer(markerCluster)) map.addLayer(markerCluster);
            } else if (map.hasLayer(markerCluster)) {
                map.removeLayer(markerCluster);
            }
        }

        // GeoJSON layers
        if (geojsonLayers.kabupaten) {
            if (layerType === 'kader' && map.hasLayer(geojsonLayers.kabupaten)) {
                map.removeLayer(geojsonLayers.kabupaten);
            } else if (layerType !== 'kader' && !map.hasLayer(geojsonLayers.kabupaten)) {
                map.addLayer(geojsonLayers.kabupaten);
            }
        }

        geojsonLayers.kecamatans.forEach(layer => {
            if ((layerType === 'dprt' || layerType === 'kader') && map.hasLayer(layer)) {
                map.removeLayer(layer);
            } else if (!(layerType === 'dprt' || layerType === 'kader') && !map.hasLayer(layer)) {
                map.addLayer(layer);
            }
        });

        console.log(`‚úÖ Toggled data layer to: ${layerType}`);
    }

