<script>
    const gisPageData = @json($gisPageData ?? []);
    const apiUrl = '{{ route("admin.gis.api.data") }}';
</script>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"></script>

<script>
    // üîß Fix Leaflet marker icon path
    delete L.Icon.Default.prototype._getIconUrl;
    L.Icon.Default.mergeOptions({
        iconRetinaUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon-2x.png',
        iconUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png',
        shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png',
    });

    // üó∫Ô∏è GLOBAL VARIABLES
    let map = null;
    let markerCluster = null;
    let currentTileLayer = null;
    let dpcMarkers = [];
    let dprtMarkers = [];
    let geojsonLayers = {
        kabupaten: null,
        kecamatans: [],
        desas: []
    };

    // üöÄ MAIN MAP INITIALIZATION
    async function initMap() {
        console.log('üó∫Ô∏è Initializing map...');

        try {
            // 1. Create map instance
            map = L.map('map', {
                center: [-7.150975, 111.881860],
                zoom: 10,
                zoomControl: false // We'll add custom controls
            });

            // 2. Add default tile layer
            currentTileLayer = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            // 3. Fetch data from API
            console.log('üì° Fetching data from API...');
            const response = await fetch(apiUrl);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            console.log('‚úÖ Data loaded:', data);

            // 4. Add all map features
            addGeojsonLayers(data);
            addDpcMarkers(data);
            addDprtMarkers(data);
            addDpdMarker();

            // 5. Setup controls AFTER map is loaded
            setupMapControls();

            // 6. Hide loading indicator
            document.getElementById('map-loading').style.display = 'none';

            // 7. Update legend with statistics
            updateLegendStatistics(data.statistics);

            console.log('üéâ Map successfully loaded with all features!');

        } catch (error) {
            console.error('‚ùå Map initialization error:', error);
            showMapError(error);
        }
    }

    // üó∫Ô∏è ADD GEOJSON LAYERS
    function addGeojsonLayers(data) {
        try {
            // Kabupaten boundary
            if (data.geojson?.kabupaten?.geojson) {
                try {
                    const kabupatenGeoJSON = typeof data.geojson.kabupaten.geojson === 'string' ?
                        JSON.parse(data.geojson.kabupaten.geojson) :
                        data.geojson.kabupaten.geojson;

                    geojsonLayers.kabupaten = L.geoJSON(kabupatenGeoJSON, {
                        style: {
                            fillColor: '#dc2626',
                            weight: 3,
                            opacity: 1,
                            color: '#dc2626',
                            fillOpacity: 0.1,
                            dashArray: '5, 5'
                        }
                    }).bindPopup(`
                        <div style="font-weight: bold; color: #dc2626;">
                            ${data.geojson.kabupaten.name}
                        </div>
                        <div style="font-size: 12px;">
                            ${data.geojson.kabupaten.total_kecamatan} Kecamatan
                        </div>
                        <div style="font-size: 12px;">
                            ${data.geojson.kabupaten.total_desa} Desa
                        </div>
                    `).addTo(map);

                    console.log('‚úÖ Kabupaten boundary added');
                } catch (e) {
                    console.warn('‚ö†Ô∏è Failed to parse kabupaten GeoJSON:', e);
                }
            }

            // Kecamatan boundaries
            if (data.geojson?.kecamatans && Array.isArray(data.geojson.kecamatans)) {
                data.geojson.kecamatans.forEach(kecamatan => {
                    if (kecamatan.geojson) {
                        try {
                            const kecamatanGeoJSON = typeof kecamatan.geojson === 'string' ?
                                JSON.parse(kecamatan.geojson) :
                                kecamatan.geojson;

                            const layer = L.geoJSON(kecamatanGeoJSON, {
                                style: {
                                    fillColor: '#3b82f6',
                                    weight: 2,
                                    opacity: 0.8,
                                    color: '#3b82f6',
                                    fillOpacity: 0.05
                                }
                            }).bindPopup(`
                                <div style="font-weight: bold;">
                                    Kecamatan ${kecamatan.name}
                                </div>
                                <div style="font-size: 12px;">
                                    ${kecamatan.total_desa || 0} Desa
                                </div>
                                <div style="font-size: 12px;">
                                    Kode BPS: ${kecamatan.kode_bps || '-'}
                                </div>
                            `);

                            geojsonLayers.kecamatans.push(layer);
                            layer.addTo(map);
                        } catch (e) {
                            console.warn('‚ö†Ô∏è Failed to parse kecamatan GeoJSON:', e);
                        }
                    }
                });
                console.log(`‚úÖ ${data.geojson.kecamatans.length} kecamatan boundaries added`);
            }

        } catch (error) {
            console.warn('‚ö†Ô∏è GeoJSON layers error:', error);
        }
    }

    // üìç ADD DPC MARKERS
    function addDpcMarkers(data) {
        if (!data.dpcs || !Array.isArray(data.dpcs)) return;

        data.dpcs.forEach(dpc => {
            const lat = dpc.latitude || -7.150975;
            const lng = dpc.longitude || 111.881860;
            const hasCoords = dpc.latitude && dpc.longitude;

            // Create custom icon
            const icon = L.divIcon({
                html: `
                    <div style="position: relative;">
                        <div class="custom-dpc-icon" style="background-color: ${hasCoords ? '#3b82f6' : '#9ca3af'};">
                            <i class="fas fa-building" style="font-size: 12px;"></i>
                        </div>
                        ${dpc.total_kader > 0 ? `
                            <div style="position: absolute; top: -4px; right: -4px; width: 16px; height: 16px; 
                                 background-color: white; border-radius: 50%; border: 1px solid #3b82f6; 
                                 display: flex; align-items: center; justify-content: center;">
                                <span style="font-size: 9px; font-weight: bold; color: #3b82f6;">
                                    ${dpc.total_kader || 0}
                                </span>
                            </div>
                        ` : ''}
                    </div>
                `,
                className: 'dpc-marker',
                iconSize: [32, 32],
                iconAnchor: [16, 32]
            });

            // Create marker
            const marker = L.marker([lat, lng], {
                    icon
                })
                .bindPopup(`
                    <div style="font-weight: bold; color: #3b82f6; margin-bottom: 5px;">
                        ${dpc.kecamatan_name}
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        Ketua: ${dpc.ketua || 'Belum ditentukan'}
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        Kader: ${dpc.total_kader || 0} orang
                    </div>
                    <div style="font-size: 12px; margin-bottom: 3px;">
                        DPRT: ${dpc.total_dprt || 0} desa
                    </div>
                    <div style="font-size: 12px; margin-bottom: 5px;">
                        Status: ${dpc.is_active ? 'Aktif' : 'Non-Aktif'}
                    </div>
                    ${!hasCoords ? 
                        '<div style="font-size: 11px; color: #eab308; font-style: italic;">*Koordinat belum diisi</div>' 
                        : ''}
                    <div style="margin-top: 8px;">
                        <a href="/admin/dpc/${dpc.id}" 
