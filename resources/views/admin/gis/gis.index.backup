        document.getElementById('reset-view').addEventListener('click', () => {
            if (map) map.setView([-7.150975, 111.881860], 10);
        });

        // Map type control
        document.getElementById('map-type').addEventListener('change', function(e) {
            changeMapType(e.target.value);
